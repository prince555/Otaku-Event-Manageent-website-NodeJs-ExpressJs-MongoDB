<%- include('header') %>
    <div class="container">
        <div class="row">

            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Make new Announcement</div>
                         </div>  
                    <div class="panel-body" >
                        <form action="/announcement" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                          
                            <div class="form-group">
                              <% if(errors !=''){%>
                                <p style="text-align: center;color:red;"><%= errors.passwordCategory.msg %></p>
                                  <% } %>

                                  <% if(success !=''){%>
                                    <p style="text-align: center;color:green;"><%= success %></p>
                                      <% } %>
                                <label for="username" class="col-md-3 control-label">Announcement</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="annocat" placeholder="type here.....">
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Make Announcement" class="btn btn-primary">   
                                </div>
                            </div>
                            
                            <p><a href="/announce">View All Announcements</a></p>
     
                        </form>
                     </div>
                </div>          
     </div> 
        </div>
      </div>
      <%- include('footer') %>